<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="코로나 자가진단 문진표"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="1. 코로나19 확진 판정을 받은 이력이 있습니까?" />

        <RadioGroup
            android:id="@+id/A1"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q1_Y"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="예" />

            <RadioButton
                android:id="@+id/Q1_N"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="아니요" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="2. 현재 37.5도 이상의 발열이 있거나, 호흡기증상( 기침, 인후통, 호흡곤란 등)이 있습니까?" />

        <RadioGroup
            android:id="@+id/A2"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q2_Y"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="예" />

            <RadioButton
                android:id="@+id/Q2_N"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="아니요" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="3. 최근 14일 이내 해외에서 입국한 사실이 있습니까?" />

        <RadioGroup
            android:id="@+id/A3"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q3_Y"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="예" />

            <RadioButton
                android:id="@+id/Q3_N"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="아니요" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="4. 최근 14일 이내에 코로나19 확진자와 밀접접촉 한 적이 있습니까?" />

        <RadioGroup
            android:id="@+id/A4"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q4_Y"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="예" />

            <RadioButton
                android:id="@+id/Q4_N"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="아니요" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="5. 동거가족 중에 현재 자가격리 중인 가족이 있습니까?" />

        <RadioGroup
            android:id="@+id/A5"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Q5_Y"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="예" />

            <RadioButton
                android:id="@+id/Q5_N"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="아니요" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
</androidx.constraintlayout.widget.ConstraintLayout>